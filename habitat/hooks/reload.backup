#!/bin/sh

exec 2>&1

export HOME=/hab/svc/assoc/data
cd /hab/svc/assoc

if [ "$(whoami)" = "root" ]; then
    exec chpst \
         -U hab:hab \
         -u hab:hab \
         assoc-stop 2>&1
    exec chpst \
         -U hab:hab \
         -u hab:hab \
         assoc-web 2>&1
else
    exec assoc-stop 2>&1
    exec assoc-web 2>&1
fi

echo "Reload hook executed"
