#!/usr/bin/env bash

# GENERAL
export LANG=en_US.UTF8
export RACK_ENV=production

# APPLICATION
export HOST_URI=127.0.0.1
export HANAMI_ENV=production
export WEB_SESSIONS_SECRET=
export RESEARCH_SESSIONS_SECRET=
export ADMIN_SESSIONS_SECRET=

# MAIL
export SMTP_HOST=
export SMTP_PORT=

# DATABASE
# Currently DATABASE_NAME has these useful values: mysql-5.7
export DATABASE_NAME='not-mysql-5.7'
export DATABASE_ADAPTER=mysql2
export DATABASE_USER=
export DATABASE_PASSWORD=
export DATABASE_HOST=127.0.0.1
export DATABASE_PORT=3306
export DATABASE_DB=assoc
export DATABASE_URL="${DATABASE_ADAPTER}://${DATABASE_USER}:${DATABASE_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/${DATABASE_DB}"

# UNICORN
export UNICORN_HOST=127.0.0.1
export UNICORN_PORT=3800
export UNICORN_WORKER_PROCESSES=2
export UNICORN_TIMEOUT=30
